<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8"/>
		<link rel="stylesheet" href="bulma.min.css">
		<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"> </script>
	</head>
	<body>
		<section class="section">
			<div class="maincolumns columns is-desktop is-vcentered">
				<div class="column is-10 is-offset-1 notification is-info is-light box container">
					<div class="title">
						Purchase Items
					</div>	
					<% if (items) { %>
						<div class="table-container">
						<table class="table is-bordered is-hoverable is-striped is-narrow">
							<thead>
							<tr>
								<th>Item Name</th>
								<th>Description</th>
								<th>Item Cost</th>
								<th>Quantity</th>
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th>&nbsp;</th>
							</tr>
							</thead>
							<% let i=0; %>
							<% for(i=0; i < items.length; i++) { %>
							<tr>
								<td><%= items[i].item_name %></td>
								<td><%= items[i].item_description %></td>
								<td>$<%= items[i].cost %></td>
								<td><%= items[i].quantity %></td>
								<td>
									<a style="text-decoration: none;" href="/increase?id=<%=items[i].purchase_item_id%>"><i class="fas fa-caret-square-up"></i></a>
								</td>
								<td>
									<a style="text-decoration: none;" href="/decrease?id=<%=items[i].purchase_item_id%>"><i class="fas fa-caret-square-down"></i></a>
								</td>

								<td><a href="/delete?id=<%=items[i].purchase_item_id%>">
									<span class="icon is-small">
										<i class="fas fa-trash"></i>
									</span></a>
								</td>
								
								
							</tr>
							<% } %>
							<tfoot>
								<tr> <td colspan="<number_of_columns>">
								<% total=0 %>
								<% for(item of items) { %>
									<% total += parseInt(item.cost)%>
								<%}%>
								There are <%= i %> items for a total of $<%= total %>.
								</td> </tr>
							</tfoot>
						</table>
						</div>
					<% } %>
					<form action="/addItem" method="post">  
						<div class="field is-horizontal">    
							<div class="field-label is-normal">   
								<label class="label">Add New Purchase Items</label>    
							</div>    
							<div class="field-body">   
								<div class="field">     
									<p class="control is-expanded">    
										<input name="item_name" class="input" type="text"     
											placeholder="Name">  
									</p>
								</div>
								<div class="field">     
									<p class="control is-expanded">    
										<input name="item_description" class="input" type="text"     
											placeholder="Description">  
									</p>
								</div>
								<div class="field">     
									<p class="control is-expanded">    
										<input name="cost" class="input" type="text"     
											placeholder="Cost">  
									</p>
								</div>
								<div class="field">     
									<p class="control is-expanded">    
										<input name="quantity" class="input" type="text"     
											placeholder="Quantity">  
									</p>
								</div>
								<div class="field">    
									<button class="button is-link">     
										<span>Add</span>     
										<span class="icon is-small">      
											<i class="fas fa-user-plus"></i>     
										</span>    
									</button>   
								</div>    
							</div>  
						</div> 
					</form> 
				</div>
			</div>
		</section>
	</body>
</html>
